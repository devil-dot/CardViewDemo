<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="5dp"
    android:weightSum="2"
    android:background="@color/background_color"
    tools:context=".MainActivity">




    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:clipToPadding="false"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/schoolID"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:focusable="true">


            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:src="@drawable/school_icon"
                    android:padding="10dp"
                    android:background="@drawable/circlebackground_purple"
                    android:layout_width="65dp"
                    android:layout_height="65dp"/>



                <View
                    android:background="@color/material_deep_purple"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                
                
                
                <TextView
                    android:text="@string/option1"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/hospitalID"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:focusable="true">


            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:src="@drawable/hospital_icon"
                    android:padding="10dp"
                    android:background="@drawable/circlebackground_pink"
                    android:layout_width="65dp"
                    android:layout_height="65dp"/>



                <View
                    android:background="@color/material_pink"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>



                <TextView
                    android:text="@string/option2"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:clipToPadding="false"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/airportID"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:focusable="true">


            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:src="@drawable/airport_icon"
                    android:padding="10dp"
                    android:background="@drawable/circlebackground_green"
                    android:layout_width="65dp"
                    android:layout_height="65dp"/>



                <View
                    android:background="@color/material_green"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>



                <TextView
                    android:text="@string/option3"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/restaurantID"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:focusable="true">


            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:src="@drawable/restaurant_icon"
                    android:padding="10dp"
                    android:background="@drawable/circlebackground_blue"
                    android:layout_width="65dp"
                    android:layout_height="65dp"/>



                <View
                    android:background="@color/material_blue"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>



                <TextView
                    android:text="@string/option4"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>



</LinearLayout>